{
  "manifest_version": 3,
  "name": "chatgpt-pretty-inline-code",
  "description": "Make inline code looks better on ChatGPT.",
  "version": "1.0",
  "content_scripts": [
    {
      "matches": [
        "https://chatgpt.com/*"
      ],
      "css": [
        "style.css"
      ]
    }
  ],
  "icons": {
    "32": "icon_32.png",
    "128": "icon_128.png"
  },
  "permissions": [
    "activeTab"
  ]
}